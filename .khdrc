#enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFFD5C4A1

khd mode resize prefix on
khd mode resize timeout 2
khd mode resize restore default
khd mode resize color 0xFF2AA198

# Launch terminal
cmd + alt + ctrl - return           :    open -na /Applications/Hyper.app

# Launch launcher
#cmd + alt + ctrl - space            :    open -na /Applications/Alfred\ 3.app

# Restart khd
cmd + alt + ctrl - escape           :    brew services restart khd

# Restart kwm
cmd + alt + ctrl + shift - escape   :    brew services restart kwm

# Lock Screen
cmd + alt + ctrl - l                :    pmset displaysleepnow

# Close Window
cmd + alt + ctrl - w                :    khd -p "cmd - w"

# Close application
cmd + alt + ctrl - q                :    khd -p "cmd - q"

# Full Screen
cmd + alt + ctrl - f                :    kwmc window -z fullscreen

# Toggle floating window
cmd + alt + ctrl - s                :    kwmc window -t focused

# Move between spaces
#cmd + alt + ctrl - 0x12            :    kwmc space -fExperimental 1
#cmd + alt + ctrl - 0x13            :    kwmc space -fExperimental 2
#cmd + alt + ctrl - 0x14            :    kwmc space -fExperimental 3
#cmd + alt + ctrl - 0x15            :    kwmc space -fExperimental 4
#cmd + alt + ctrl - 0x16            :    kwmc space -fExperimental 5
cmd + alt + ctrl + shift - 0x12    :    kwmc window -m space 1
cmd + alt + ctrl + shift - 0x13    :    kwmc window -m space 2
cmd + alt + ctrl + shift - 0x14    :    kwmc window -m space 3
cmd + alt + ctrl + shift - 0x15    :    kwmc window -m space 4
cmd + alt + ctrl + shift - 0x16    :    kwmc window -m space 5

# Focus windows
cmd + alt + ctrl - left            :    kwmc window -f west
cmd + alt + ctrl - right           :    kwmc window -f east
cmd + alt + ctrl - down            :    kwmc window -f south
cmd + alt + ctrl - up              :    kwmc window -f north
cmd + alt + ctrl - 0x2B            :    kwmc window -f prev
cmd + alt + ctrl - 0x2F            :    kwmc window -f next

# Move windows
cmd + alt + ctrl + shift - left     :    kwmc window -s west
cmd + alt + ctrl + shift - down     :    kwmc window -s south
cmd + alt + ctrl + shift - up       :    kwmc window -s north
cmd + alt + ctrl + shift - right    :    kwmc window -s east
cmd + alt + ctrl + shift - 0x2B     :    kwmc window -s prev
cmd + alt + ctrl + shift - 0x2F     :    kwmc window -s next

# Resize windows
cmd + alt + ctrl - r               :    khd -e "mode activate resize"
resize - left                      :    kwmc window -c expand 0.05 west
resize - down                      :    kwmc window -c expand 0.05 south
resize - up                        :    kwmc window -c expand 0.05 north
resize - right                     :    kwmc window -c expand 0.05 east
resize + shift - right             :    kwmc window -c reduce 0.05 west
resize + shift - down              :    kwmc window -c reduce 0.05 south
resize + shift - up                :    kwmc window -c reduce 0.05 north
resize + shift - left              :    kwmc window -c reduce 0.05 east

# Split mode
cmd + alt + ctrl - t            :   kwmc window -c split-mode toggle

# Set Space Tiling Mode To BSP
#cmd + ctrl - a           :    kwmc space -t bsp

# Set Space Tiling Mode To Monocle
#cmd + ctrl - s           :    kwmc space -t monocle

# Set Space Tiling Mode To Floating
#cmd + ctrl - d           :    kwmc space -t float

# Rotate Window-Tree By 90degrees (Clockwise)
#cmd + ctrl - r           :    kwmc tree rotate 90

# Set Temporary Window Container
#prefix - d               :    kwmc window -z parent

